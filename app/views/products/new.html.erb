<div class="container">
    <div class="row">       
        <div class="col-sm-6 col-sm-offset-3">
            <h1>Publish product</h1>
          
            <%= form_for @product  do |f| %>
                <div class="form-group">
                    <%= f.text_field :name, class: "form-control" ,placeholder: "Product" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :url, class: "form-control input-lg",placeholder: "URL product" %>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, class: "form-control input-lg",placeholder: "Product description" %>
                </div>
                <div class="form-group">
                    <%= f.submit "publish product", class:"btn btn-primary btn-lg btn-block"  %>
                </div>

            <% end %>
        </div>
    </div>
</div>